<?xml version="1.0" encoding="UTF-8"?>
<launch>
      
  <!-- Load joint controllers -->
  <rosparam file="$(find kuka_kr20_description)/config/trajectory_control.yaml" command="load" />
  
  <!-- Joint Controllers -->
  <node name="kr2_controller_spawner" pkg="controller_manager" type="spawner"
        respawn="false" output="screen" ns="/kr20"
        args="kr20_joint_controller
              gripper_controller"/>
        
  <!--node name="rqt_publisher" pkg="rqt_publisher" type="rqt_publisher" /-->

  <!-- Load controllers -->
  <rosparam file="$(find kuka_kr20_description)/config/joints_states.yaml" command="load" />
  
  <!-- Controllers -->
  <node name="joint_controller_spawner" pkg="controller_manager" type="spawner" respawn="false" 
        output="screen" ns="/kr20" args="joint_state_controller"/>

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
        respawn ="false" output="screen" >
    <remap from="/joint_states" to="/kr20/joint_states" />
  </node>

  <rosparam file="$(find kuka_kr20_description)/config/gazebo_ros_control_params.yaml" command="load"/>

  <!--node pkg="rviz" type="rviz" name="rviz" required="true"
        args="-d $(find scorbot_er_description)/rviz/scorbot_er.rviz"/-->
          
</launch>
